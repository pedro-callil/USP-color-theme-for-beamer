\RequirePackage{ifthen}
\RequirePackage{stringstrings}

\def\beamer@usp@inst{usp}

\DeclareOptionBeamer{usp}{\def\beamer@usp@inst{usp}}
\DeclareOptionBeamer{poli}{\def\beamer@usp@inst{poli}}
\DeclareOptionBeamer{peq}{\def\beamer@usp@inst{peq}}
\ProcessOptionsBeamer

\mode<presentation>

\definecolor{instprimary}{RGB}{16, 148, 171}
\definecolor{instsecondary}{RGB}{100, 196, 210}
\definecolor{insttertiary}{RGB}{252, 180, 33}

\ifthenelse{
  \equal{\beamer@usp@inst}{usp}
}{
  \definecolor{instprimary}{RGB}{16, 148, 171}
  \definecolor{instsecondary}{RGB}{100, 196, 210}
  \definecolor{insttertiary}{RGB}{252, 180, 33}
}{
}

\ifthenelse{
  \equal{\beamer@usp@inst}{poli}
}{
  \definecolor{instprimary}{RGB}{1, 33, 105}
  \colorlet{instsecondary}{instprimary!40!white}
  \definecolor{insttertiary}{RGB}{254, 221, 0}
}{
}

\ifthenelse{
  \equal{\beamer@usp@inst}{peq}
}{
  \definecolor{instprimary}{RGB}{0, 0, 0}
  \colorlet{instsecondary}{instprimary!40!white}
  \definecolor{insttertiary}{HTML}{ED0678}
}{
}

\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor*{alerted text}{fg=instprimary}
\setbeamercolor*{example text}{fg=instsecondary}
\setbeamercolor*{structure}{fg=black}

\providecommand*{\beamer@bftext@only}{%
  \relax
  \ifmmode
    \expandafter\beamer@bftext@warning
  \else
    \expandafter\bfseries
  \fi
}
\providecommand*{\beamer@bftext@warning}{%
  \ClassWarning{beamer}
    {Cannot use bold for alerted text in math mode}%
}

\setbeamerfont{alerted text}{series=\beamer@bftext@only}

\setbeamercolor*{palette primary}{fg=white,bg=instprimary}
\setbeamercolor*{palette secondary}{fg=black,bg=instsecondary}
\setbeamercolor*{palette tertiary}{fg=black,bg=insttertiary}
\setbeamercolor*{palette quaternary}{fg=black,bg=insttertiary}

\setbeamercolor{sidebar}{bg=insttertiary!60!white}

\setbeamercolor*{palette sidebar primary}{fg=black}
\setbeamercolor*{palette sidebar secondary}{fg=black}
\setbeamercolor*{palette sidebar tertiary}{fg=black}
\setbeamercolor*{palette sidebar quaternary}{fg=black}

\setbeamercolor*{item projected}{fg=black,bg=instsecondary}

\setbeamercolor*{block title}{fg=white,bg=instprimary}
\setbeamercolor*{block title alerted}{fg=white,bg=instprimary!50!black}
\setbeamercolor*{block title example}{fg=white,bg=instprimary}

\setbeamercolor*{block body}{fg=black,bg=instsecondary}
\setbeamercolor*{block body alerted}{fg=black,bg=instsecondary}
\setbeamercolor*{block body example}{fg=black,bg=instsecondary}

\setbeamercolor*{titlelike}{parent=palette primary}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor*{itemize item}{fg=instprimary}
\setbeamercolor*{itemize subitem}{fg=instprimary}
\setbeamercolor*{itemize subsubitem}{fg=instprimary}

\setbeamercolor*{item projected}{bg=instprimary, fg=white}

\mode
<all>
