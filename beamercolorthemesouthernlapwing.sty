\mode<presentation>

\definecolor{uspdarkblue}{RGB}{16, 148, 171}
\definecolor{usplightblue}{RGB}{100, 196, 210}
\definecolor{uspyellow}{RGB}{252, 180, 33}

\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor*{alerted text}{fg=uspdarkblue}
\setbeamercolor*{example text}{fg=usplightblue}
\setbeamercolor*{structure}{fg=black}

\providecommand*{\beamer@bftext@only}{%
  \relax
  \ifmmode
    \expandafter\beamer@bftext@warning
  \else
    \expandafter\bfseries
  \fi
}
\providecommand*{\beamer@bftext@warning}{%
  \ClassWarning{beamer}
    {Cannot use bold for alerted text in math mode}%
}

\setbeamerfont{alerted text}{series=\beamer@bftext@only}

\setbeamercolor*{palette primary}{fg=black,bg=uspyellow}
\setbeamercolor*{palette secondary}{fg=black,bg=uspyellow}
\setbeamercolor*{palette tertiary}{fg=black,bg=uspyellow}
\setbeamercolor*{palette quaternary}{fg=black,bg=uspyellow}

\setbeamercolor{sidebar}{bg=uspyellow!60!white}

\setbeamercolor*{palette sidebar primary}{fg=black}
\setbeamercolor*{palette sidebar secondary}{fg=black}
\setbeamercolor*{palette sidebar tertiary}{fg=black}
\setbeamercolor*{palette sidebar quaternary}{fg=black}

\setbeamercolor*{item projected}{fg=black,bg=usplightblue}

\setbeamercolor*{block title}{fg=white,bg=uspdarkblue}
\setbeamercolor*{block title alerted}{fg=white,bg=uspdarkblue!50!black}
\setbeamercolor*{block title example}{fg=white,bg=uspdarkblue}

\setbeamercolor*{block body}{fg=black,bg=usplightblue}
\setbeamercolor*{block body alerted}{fg=black,bg=usplightblue}
\setbeamercolor*{block body example}{fg=black,bg=usplightblue}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
